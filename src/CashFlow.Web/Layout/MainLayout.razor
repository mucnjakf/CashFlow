@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(_ => DrawerToggle())"/>
        <MudText Typo="Typo.h5" Class="ml-3">CashFlow</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End"/>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
        <MudNavMenu Bordered="true" Margin="Margin.Normal">
            <MudNavLink Href="/dashboard" Icon="@Icons.Material.Rounded.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/account" Icon="@Icons.Material.Rounded.AccountBalanceWallet">Account</MudNavLink>
            <MudNavLink Href="/transactions" Icon="@Icons.Material.Rounded.PostAdd">Transactions</MudNavLink>
            <MudNavLink Href="/categories" Icon="@Icons.Material.Rounded.Category">Categories</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-3">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}